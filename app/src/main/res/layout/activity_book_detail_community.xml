<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:rvp="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/common_toolbar" />

    <com.xsnail.leisurereader.view.RVPIndicator
        android:id="@+id/indicatorSubRank"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        rvp:indicator_color="@color/gender_select_male_normal"
        rvp:indicator_style="line"
        rvp:item_count="2"
        rvp:text_color_hightlight="@color/light_coffee"
        rvp:text_color_normal="@color/light_gray" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpagerSubRank"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>